{
  "name": "Mindmap",
  "version": "1.0",
  "description": "A chrome extension which insert selected text to Mindmap.",
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab", "declarativeContent", "storage", "https://*/*", "identity"],
  "web_accessible_resources": [
    "dialog.html",
    "fontawesome-free-5.9.0-web/css/all.css",
    "util/extended-prototype.js",
    "util/debounce.js",
    "components/board.js",
    "components/node.js"
  ],
  "commands": {
    "dialog": {
      "suggested_key": {
        "windows": "Ctrl+Shift+P",
        "mac": "Command+Shift+P",
        "chromeos": "Ctrl+Shift+P",
        "linux": "Ctrl+Shift+P"
      },
      "description": "popup dialog"
    },
    "switch_to_board": {
      "suggested_key": {
        "windows": "Ctrl+Shift+1",
        "mac": "Command+Shift+1",
        "chromeos": "Ctrl+Shift+1",
        "linux": "Ctrl+Shift+1"
      },
      "description": "switch to board"
    },
    "switch_to_history": {
      "suggested_key": {
        "windows": "Ctrl+Shift+2",
        "mac": "Command+Shift+2",
        "chromeos": "Ctrl+Shift+2",
        "linux": "Ctrl+Shift+2"
      },
      "description": "switch to history"
    },
    "toggle_board_form": {
      "suggested_key": {
        "windows": "Ctrl+Shift+E",
        "mac": "Command+Shift+E",
        "chromeos": "Ctrl+Shift+E",
        "linux": "Ctrl+Shift+E"
      },
      "description": "toggle board form"
    }
  },
  "oauth2": {
    "client_id": "675953765772-iobng4mcdc45qnupc94vp51h7edtbq5p.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile"
    ]
  }
}